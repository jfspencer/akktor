{
    "extends": "./tsconfig",
    "compilerOptions": {
      "target": "ES5",
      "outDir": "build/bundle",  
      "outFile": "./build/bundle/build.js",
      "removeComments": true,
      "preserveConstEnums": true,
      "module":"system"
    },
    "exclude": [
      "node_modules/**",
      // typescript-starter: exclude CLI from module build, since it's exclusively
      // for Node.js. (This should also be stripped from the generated project.)
      "src/cli/**/*.ts"
    ]
  }